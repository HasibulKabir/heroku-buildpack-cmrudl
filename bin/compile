#!/bin/sh
echo "-----> Installing heroku cloud.mail.ru buildpack"
BUILD_DIR=$1
VENDOR_DIR="$BUILD_DIR/vendor"
curl -O "https://raw.githubusercontent.com/yshalsager/cmrudl.py/master/cmrudl.py"
mv "$VENDOR_DIR/cmrudl.py" "$VENDOR_DIR/cmrudl.py"
PROFILE_PATH="$BUILD_DIR/.profile.d/cmrudl.py.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/cmrudl.py/bin"' >> $PROFILE_PATH

echo "-----> Done."